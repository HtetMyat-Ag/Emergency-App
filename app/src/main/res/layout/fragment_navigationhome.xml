<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="40dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="40dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnInstruction"
        style="@style/customButton"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_btnhome_color"
        android:drawableTop="@drawable/ic_information_1_"
        android:paddingTop="37dp"
        android:text="Information"
        android:textColor="#ffebee"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btnRegister"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRegister"
        style="@style/customButton"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_btnhome_color"
        android:drawableTop="@drawable/ic_add"
        android:paddingTop="37dp"
        android:paddingBottom="12dp"
        android:text="Register Number"
        android:textColor="#ffebee"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnInstruction"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContact"
        style="@style/customButton"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_btnhome_color"
        android:drawableTop="@drawable/ic_add"
        android:paddingTop="37dp"
        android:text="View Contact"
        android:textColor="#ffebee"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btnDelete"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnInstruction" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDelete"
        style="@style/customButton"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_btnhome_color"
        android:drawableTop="@drawable/ic_delete"
        android:paddingTop="40dp"
        android:paddingBottom="10dp"
        android:text="Delete Number"
        android:textColor="#ffebee"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnContact"
        app:layout_constraintTop_toBottomOf="@id/btnRegister" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEdit"
        style="@style/customButton"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_btnhome_color"
        android:drawableTop="@drawable/ic_edit"
        android:paddingTop="36dp"
        android:paddingBottom="12dp"
        android:text="Edit SOS Message"
        android:textColor="#ffebee"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btnRate"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnContact" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRate"
        style="@style/customButton"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_btnhome_color"
        android:drawableTop="@drawable/ic_rate"
        android:paddingTop="32dp"
        android:text="Rate Us"
        android:textColor="#ffebee"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnEdit"
        app:layout_constraintTop_toBottomOf="@id/btnDelete" />

</androidx.constraintlayout.widget.ConstraintLayout>